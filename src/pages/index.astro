---
import HeroSection from "../components/HeroSection/HeroSection.astro";
import ExperienceSection from "../components/ExperienceSection/ExperienceSection.astro";
import Layout from "../components/Layouts/Layout.astro";
import AboutMe from "../components/ExperienceSection/AboutMe.astro";
import Technologies from "../components/common/technologies/index.astro";
---

<Layout title="Welcome to Astro.">
  <HeroSection />
  <section
    class={`
    relative z-[3] mt-[10px] space-y-[200px] 2xl:space-y-0 2xl:grid 2xl:grid-cols-[700px,500px] 2xl:gap-[100px] 2xl:place-content-center bg-primary text-white
    before:absolute before:z-10 before:bg-gradient-to-t before:from-primary before:to-transparent before:bottom-full before:h-[200px] before:w-full
`}
  >
    <ExperienceSection />
    <AboutMe />
  </section>
  <section class="bg-primary/50">
    <div
      class="container w-[90%] max-w-[1300px] space-y-12 pt-[200px] 2xl:pt-[100px] pb-[200px]"
    >
      <h2 class="ml-[4px] text-center 2xl:text-left">Technologies</h2>
      <Technologies />
    </div>
  </section>
</Layout>

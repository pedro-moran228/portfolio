---
import StainBall from "../common/StainBall.astro";
---

<!doctype html>
<html lang="en" class="relative z-[2]">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/wallet-opened.svg" />
    <title>Pedro Moran</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      fetchpriority="high"
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="relative z-[2]">
    <slot />
    <!-- <EggSpinner /> -->
    <StainBall />
    <StainBall />
    <StainBall />
  </body>
</html>
<style is:global>
  html,
  body {
    font-family: "Poppins", sans-serif;
    background-color: #191e29;
    color: white;
    height: 100vh;
    overflow-x: hidden;
  }

  *::selection {
    background-color: #6c426e;
  }

  .mask-triangle--before::before {
    clip-path: polygon(0 100%, 100% 100%, 100% 0);
  }
</style>
<script>
  const favicon = document.querySelector("link[rel=icon]") as HTMLLinkElement;
  window.addEventListener("blur", () => (favicon.href = "/wallet-closed.svg"));
  window.addEventListener("focus", () => (favicon.href = "/wallet-opened.svg"));
</script>

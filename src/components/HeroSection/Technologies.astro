---

<section
  class="relative flex-center mx-auto w-[330px] h-[330px] md:w-[380px] md:h-[380px]"
>
  <h3 class="absolute z-20 font-bold">Tecnolog√≠as</h3>
  <div
    class="w-full h-full animate-spin [&>section>div]:animate-spin-reverse relative [&>section]:duration-100 [&>section]:absolute rounded-full"
  >
    <section class="left-1/2 -translate-x-1/2 hover:scale-110">
      <div
        class="w-[72px] h-[70px] p-[10px] bg-[#ffd600] rounded-lg overflow-hidden shadow-[0px_1px_3px_rgb(0_0_0_/_0.3)]"
      >
        <img
          class="w-full h-full"
          src="skills/javascript.svg"
          alt="javascript"
        />
      </div>
    </section>
    <section class="top-[12%] right-[11%] hover:scale-110">
      <div
        class="bg-[#1976D2] rounded-lg overflow-hidden shadow-[0px_1px_3px_rgb(0_0_0_/_0.4)] w-[72px] h-[70px] p-[12px]"
      >
        <img
          class="w-full h-full"
          src="skills/typescript.svg"
          alt="typescript"
        />
      </div>
    </section>
    <section class="top-1/2 -translate-y-1/2 right-0 hover:scale-110">
      <div
        class="w-[75px] p-[12px] bg-[#222222] rounded-full overflow-hidden shadow-[0px_1px_3px_rgb(0_0_0_/_0.4)]"
      >
        <img
          class="w-full h-full object-cover aspect-square"
          src="skills/react.svg"
          alt="react"
        />
      </div>
    </section>
    <section class="bottom-[12%] right-[11%] hover:scale-110">
      <div
        class="w-[75px] p-[14px] bg-[#0D1323] rounded-full overflow-hidden shadow-[0px_1px_3px_rgb(0_0_0_/_0.4)]"
        style={{
          background: `
        linear-gradient(217deg, #181a1f, #4531728f 70%), 
        linear-gradient(127deg, #181a1f, #4531728f 70%), 
        linear-gradient(336deg, #181a1f, #4531728f 70%);`,
        }}
      >
        <img
          class="w-full h-full object-cover aspect-square"
          src="skills/astro.svg"
          alt="astro"
        />
      </div>
    </section>
    <section class="left-1/2 -translate-x-1/2 bottom-0 hover:scale-110">
      <div class="w-[75px] rounded-full">
        <img
          class="w-full h-full object-cover aspect-square"
          style={{ filter: "drop-shadow(0px 1px 2px rgb(0 0 0 / 0.4))" }}
          src="skills/css.svg"
          alt="css"
        />
      </div>
    </section>
    <section class="bottom-[12%] left-[11%] hover:scale-110">
      <div class="w-[75px] rounded-full">
        <img
          class="w-full h-full object-cover aspect-square"
          style={{ filter: "drop-shadow(0px 1px 2px rgb(0 0 0 / 0.4))" }}
          src="skills/html.svg"
          alt="html"
        />
      </div>
    </section>
    <section class="top-1/2 -translate-y-1/2 left-0 hover:scale-110">
      <div
        class="flex-center bg-black p-[10px] w-[75px] h-[75px] rounded-full shadow-[0px_1px_3px_rgb(0_0_0_/_0.4)]"
      >
        <img
          class="w-full"
          style={{ filter: "drop-shadow(0px 1px 1px rgb(0 0 0 / 0.4))" }}
          src="skills/next.svg"
          alt="next"
        />
      </div>
    </section>
    <section class="top-[12%] left-[11%] hover:scale-110">
      <div
        class="flex-center bg-white p-[10px] w-[75px] h-[75px] rounded-full shadow-md"
      >
        <img
          class="w-full"
          style={{ filter: "drop-shadow(0px 1px 1px rgb(0 0 0 / 0.4))" }}
          src="skills/tailwind.svg"
          alt="tailwind"
        />
      </div>
    </section>
  </div>
</section>

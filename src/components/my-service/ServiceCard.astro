---
interface Props {
    title: string;
    description: string;
    image?: string;
}

const { description, title } = Astro.props;
---

<article
    class="z-[-1] bg-primary p-10 rounded-xl shadow-md border border-[#04142a26] xs:bg-transparent xs:backdrop-blur-[100px] xs:transition-colors xs:duration-100"
>
    <h4 class="text-current">{title}</h4>
    <p>{description}</p>
</article>

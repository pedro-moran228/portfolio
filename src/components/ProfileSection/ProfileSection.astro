---
import LinkedinButton from "./LinkedinButton.astro";
import GithubButton from "./GithubButton.astro";
import GmailSection from "./gmail-section/index.astro";
import { StainBall } from "../common/stain-ball";
import MyService from "../MyService.astro";
import { Image } from "astro:assets";
import profileImg from "../../assets/profile_bg_high.png";
---

<main id="profile-section" class="flex relative z-[2] pb-[250px]">
  <section
    class="relative z-[3] xs:w-[100%] pt-0 xs:pt-[3rem] sm:pt-[6rem] grid grid-cols-[800px,500px] gap-10 place-content-center items-center"
  >
    <article
      class="w-full max-w-[800px] rounded-none text-white p-10 border border-[#04142a26] space-y-6 z-10 backdrop-blur-[100px] xs:rounded-2xl"
    >
      <header class="space-y-2 md:space-y-0">
        <div class="flex flex-col-reverse sm:block">
          <div
            class="mx-auto relative mt-10 sm:mt-0 rounded-full w-[200px] h-max overflow-hidden shadow-2xl"
            style="shape-outside: circle(50%); clip-path: circle(50%); float: right; shape-margin: 20px; background-image: radial-gradient(circle, #6c426e, #503c5f, #3a344d, #292a38, #1e1f22);"
          >
            <Image src={profileImg} alt="profile_bg_high" />
          </div>
          <section>
            <header>
              <h1 class="text-white">Pedro Moran</h1>
              <h2 class="text-[26px]">
                <span
                  class="before:rounded before:block before:absolute before:-inset-1 before:-skew-y-3 before:bg-secondary before:brightness-95 relative inline-block"
                  ><span class="relative text-white">+3 years</span></span
                >
                <span class="text-white px-[6px]">as a</span>
                <span
                  class="before:rounded before:block before:absolute before:-inset-1 before:bg-secondary before:brightness-95 relative inline-block"
                  ><span class="relative text-white">
                    Frontend Developer</span
                  ></span
                >
              </h2>
            </header>
            <p class="mt-10">
              Currently working full-time at <a
                class="font-medium"
                href="https://crowdar.com.ar/"
                target="blank">Crowdar</a
              > with development team building a product dedicated to the B2B
              sector.
            </p>
          </section>
        </div>
      </header>
      <section class="space-y-4">
        <article>
          <h3 class="text-white text-[24px]">In charge of:</h3>
          <ul class="mt-2 [&>li]:marker">
            <li>Analysis and implementation of new functionalities.</li>
            <li>Documentation.</li>
            <li>Product delivery.</li>
            <li>Tasks management</li>
            <li>Training.</li>
          </ul>
        </article>
      </section>
      <footer
        id="profile-footer"
        aria-label="Social media links"
        class="flex justify-end pt-2 gap-4"
      >
        <LinkedinButton />
        <GithubButton />
        <GmailSection />
      </footer>
    </article>
    <MyService />
  </section>
  <StainBall
    client:media="(min-width: 670px)"
    directionType="HORIZONTAL"
    defaultPosition={{ x: 25, y: 25 }}
    boxId="profile-section"
  />
  <StainBall
    client:media="(min-width: 670px)"
    directionType="VERTICAL"
    defaultPosition={{ x: 75, y: 38 }}
    boxId="profile-section"
  />
  <StainBall
    client:media="(min-width: 670px)"
    directionType="CENTER"
    defaultPosition={{ x: 50, y: 75 }}
    boxId="profile-section"
  />
</main>

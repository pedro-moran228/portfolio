---
export interface Props {
	description: string;
	title: string;
}

const { description, title } = Astro.props;
---
<article
  class="rounded overflow-hidden shadow-lg"
>
  <header class="">
    <slot name="header-img"/>
  </header>
  <div class="p-4">
    <h4 class="mb-1">{title}</h4>
    <p>
      {description}
    </p>
  </div>
</article>
